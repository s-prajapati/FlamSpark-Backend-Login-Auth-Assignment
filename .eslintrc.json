{
    "env": {
        "node":true,
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
         
            "indent": [
                "error",4],
            "semi": [
                "error",
                "always"
            ],
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "space-infix-ops": [
                "error",
                { "int32Hint": false }
            ],
            "comma-spacing": ["error", { "before": false, "after": true }]
        }
    
}
